.section-event-map
  background-color almostblack
  overflow-x hidden
  padding 0

  .venue-photo
    background center no-repeat url('/img/nmai-alt.jpg')
    flex-basis 100%
    height 600px

@media mq-xs-min

  .section-event-map
    background-color almostblack
    padding 0

    .map-location-container
      color #fff
      flex-basis 100%
      padding 20px 0

      h2
        color #fff

      a
        color #fff

      .map-location-title
        margin-top 20px

      .map-new-tab
        display block
        margin 0 auto
        text-align center
        width 90%

    .map-container
      flex-basis 100%
      width 100%
